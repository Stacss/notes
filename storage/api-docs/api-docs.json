            "post": {
                "tags": [
                    "Пользователи"
                ],
                "summary": "Регистрация нового пользователя",
                "description": "Регистрирует нового пользователя с предоставленным именем, email и паролем.",
                "operationId": "f7fb8560722ba1f43f9e570fe9affddb",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
